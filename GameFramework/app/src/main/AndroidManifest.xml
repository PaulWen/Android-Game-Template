<manifest package="de.wenzel.paul.gameframework"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="examplegame.MainActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="examplegame.GameActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="examplegame.OptionsMenuActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="examplegame.StartMenuActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
